<form action="/search" method="post">
    <section class="search-input-text">
        <label>Search here </label>
        <input class="search" type="text" name="search"><br>
    </section>
    <section class="search-input-filter">
        <article class="search-filter-searchBy">
            <label for="searchBy">Search By</label>
            <p>:</p>
            <input type="radio" name="searchBy" value="hostName"><p>Nama</p>
            <input type="radio" name="searchBy" value="hostId"><p>Id</p>
            <input type="radio" name="searchBy" value="rating"><p>Rating</p>
        </article>
        <article class="search-filter-type">
            <label for="price">Price</label>
            <p>:</p>
            <input type="radio" name="price" value="0"><p>Gratis</p>
            <input type="radio" name="price" value="1"><p>Berbayar</p>
        </article>
        <article class="search-filter-sortBy">
            <label for="searchBy">Sort By</label>
            <p>:</p>
            <input type="radio" name="sortBy" value="hostId"><p>Default</p>
            <input type="radio" name="sortBy" value="rating"><p>Rating</p>
            <input type="radio" name="sortBy" value="hostName"><p>Nama</p>
        </article>
        <article class="search-order">
            <label for="order">Descending</label>
            <p>:</p>
            <input type="checkbox" name="order" value="DESC"> 
        </article>
    </section><br>
  <button class="btn-primary" type="reset">Reset</button>
  <button class="btn-primary" type="submit">Search</button>
</form> <br> <br>

