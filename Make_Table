CREATE DATABASE lumbung;

USE lumbung;

CREATE TABLE account (
	uid INTEGER PRIMARY KEY AUTO_INCREMENT,
    email VARCHAR(255) NOT NULL,
    password VARCHAR(255) NOT NULL
);

INSERT INTO account (email, password)
VALUES
('tes@gmail.com', 'tespass');

SELECT * FROM account;

-- countFood nanti diganti aja pake jumlah reviewnya
-- contoh :
-- SELECT
-- COUNT(userId)
-- FROM
--     review;
CREATE TABLE dataUser (
    uid INTEGER PRIMARY KEY ,
    userName VARCHAR(255) NOT NULL,
    profilePicture VARCHAR(255) NOT NULL,
    userAge INTEGER NOT NULL,
    bio VARCHAR(255),
    FOREIGN KEY (uid) REFERENCES account(uid)
);

DROP TABLE `dataUser`

DROP TABLE `account`

INSERT INTO dataUser (uid, userName, profilePicture, userAge, bio)
VALUES
('1', 'tes name', 'profile picture tes', '12', 'tes bio');

SELECT * FROM dataUser;

CREATE TABLE hosting (
	hostId INTEGER PRIMARY KEY AUTO_INCREMENT,
    hostName VARCHAR(100) NOT NULL,
    price INT NOT NULL,
    images VARCHAR(255) NOT NULL, 
    rating FLOAT NOT NULL
);

INSERT INTO hosting (hostname, price, images, rating)
VALUES
('Blue Host', 40.000, 'https://tse3.mm.bing.net/th?id=OIP.P9qQ2ewGJ-ugtUeeOZeCVQHaHa&pid=Api&P=0&h=220', '9.2')

SELECT * FROM hosting;

CREATE TABLE review (
    userId INTEGER,
    hostId INTEGER,
    reviewText TEXT,
    rating INTEGER,
    reviewDate TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (userId) REFERENCES dataUser(uid),
    FOREIGN KEY (hostId) REFERENCES hosting(hostId),
    PRIMARY KEY (userId, hostId)
);

INSERT INTO review (userId, hostId, reviewText, rating)
VALUES
(4, 1, 'tes review', '9')


SELECT * FROM review;